<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="lastStation"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_play_circle_24dp"
        android:shortcutShortLabel="@string/shortcut_last_station_short_label"
        android:shortcutLongLabel="@string/shortcut_last_station_long_label"
        android:shortcutDisabledMessage="@string/shortcut_last_station_disabled_message">
        <intent
            android:action="com.mjhram.radioalarm.action.SHOW_PLAYER"
            android:targetPackage="com.mjhram.radioalarm"
            android:targetClass="com.mjhram.radioalarm.MainActivity" >
            <extra android:name="LAST_STATION" android:value="true" />
            <extra android:name="PLAYBACK_STATE" android:value="true" />
        </intent>
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>
